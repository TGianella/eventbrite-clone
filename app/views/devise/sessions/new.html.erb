<div class="container d-flex flex-column align-items-center">
  <h2 class="my-3">Se connecter</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field my-3">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class: "form-control" %>
    </div>

    <div class="field my-3">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", type: "password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field my-2">
        <%= f.check_box :remember_me, type: "checkbox", class: "form-check-input me-2" %>
        <%= f.label :se_souvenir_de_moi, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions container d-flex justify-content-center my-2 mt-4">
      <%= f.submit "Se connecter", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
