<% if flash[:success] %>
  <div class="alert alert-success alert-dismissible fade show text-center mb-0" role="alert">
    <%= flash[:success] %>
    <button type="button" class="close btn btn-sm btn-outline-success ms-2 px-1 py-0" data-bs-dismiss="alert" aria-label="close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-danger alert-dismissible fade show text-center mb-0" role="alert">
    <%= flash[:error] %>
    <button type="button" class="close btn btn-sm btn-outline-danger ms-2" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if flash.alert %>
  <div class="alert alert-warning alert-dismissible fade show text-center mb-0" role="alert">
    <%= flash.alert %>
    <button type="button" class="close btn btn-sm btn-outline-warning ms-2" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
